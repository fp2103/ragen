<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" const="text/html;charset=UTF-8" />
    <link rel="stylesheet" type="text/css" href="main.css">
    <title>RAGEN</title>
</head>

<body>
    <div id="container">
        <div id="menu" style="display: none;">
            <h3>Menu</h3>
            <span>Driver Name: </span>
            <input type="text" name="name" id="name" maxlength="10" value="anon">
            <input type="color" id="color" value="#00ffff">

            <h4>Solo</h4>
            <span>Track: </span>
            <input type="text" name="menu_seed" id="menu_seed" maxlength="10">
            <input type="button" value="Random" id="menu_random">
            <input type="button" value="Go" id="menu_go">
            

            <h4>Multi</h4>
            <span>Session ID: </span>
            <input type="text" name="sessionid" id="sessionid" maxlength="4">
            <input type="button" value="Join/Create">
        </div>

        <div id="game_elements" style="display: none;">
            <div id="scoreboard">
                <div id="track">
                    <span>Track: </span>
                    <input type="text" name="seed" id="seed" maxlength="10">
                    <input type="button" value="Random" id="random">
                    <input type="button" value="Go" id="go">
                </div>
                <table id="leaderboard">
                    <tr>
                        <td>Leaderboard</td>
                        <th>Name</th>
                        <th>Sector 1</th>
                        <th>Sector 2</th>
                        <th>Lap</th>
                    </tr>
                    <tr>
                        <td colspan="5"></td>
                    </tr>
                </table>
            </div>            
            <input id="menu_button" type="button" value="Menu">
            <p id="speed">0 km/h</p>
            <p id="score_message"></p>
            <canvas id="minimapc"></canvas>
        </div>

        <canvas id="mainc"></canvas>
    </div>
</body>

<script src="libs/seedrandom.min.js"></script>
<script src="libs/three.min.js"></script>
<script src="libs/stats.min.js"></script>
<script src="libs/ammo.js"></script>
<script src="libs/socket.io.js"></script>
<script src="ragen.js"></script>
</html>